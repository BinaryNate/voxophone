<Page navigatingTo="onNavigatingTo"
      xmlns:i="components/instrument-picker"
      xmlns:m="components/music-note-meter"
      actionBarHidden="true">
    <ActionBar>
      <NavigationButton visibility="collapsed"/>
    </ActionBar>

    <FlexboxLayout class="performance-view">

        <StackLayout class="music-note-meter-container">
            <m:music-note-meter dependencies="{{ dependencies }}"/>
        </StackLayout>

        <i:instrument-picker dependencies="{{ dependencies }}"/>
    </FlexboxLayout>
</Page>
