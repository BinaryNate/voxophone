<StackLayout loaded="onLoaded" class="instrument-picker"
             xmlns:i="components/instrument">

    <Label text="The instrument picker will go here."/>

    <ScrollView orientation="horizontal">
        <StackLayout orientation="horizontal" class="instruments-scroll-view">

            <ListView items="{{ instrumentOptions }}" row="1">
                <ListView.itemTemplate>
                    <i:instrument class="instrument" instrument="{{ instrument }}" dependencies="{{ dependencies }}"/>
                </ListView.itemTemplate>
            </ListView>


